<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="buttons">
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_button</item>
        <item name="android:backgroundTintMode">src_over</item>
        <item name="android:background">@drawable/standard_button</item>
    </style>

    <style name="button_next" parent="buttons">
        <item name="android:backgroundTint">@color/button_next_inner</item>
    </style>

    <style name="button_back" parent="buttons">
        <item name="android:backgroundTint">@color/button_back_inner</item>
    </style>

    <style name="button_neutral" parent="buttons">
        <item name="android:backgroundTint">@color/button_neutral_inner</item>
    </style>

    <style name="text_standard">
        <item name="android:textColor">@color/text_standard</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>