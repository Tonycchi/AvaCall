<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttons">
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textColor">@color/text_button</item>
    </style>

    <style name="button_next" parent="buttons">
        <item name="android:layout_width">@dimen/_100sdp</item>
        <item name="backgroundTint">@color/button_next_inner</item>
    </style>

    <style name="button_back" parent="buttons">
        <item name="android:layout_width">@dimen/_100sdp</item>
        <item name="android:background">@drawable/button_navigation</item>
    </style>

    <style name="button_neutral" parent="buttons">
        <item name="android:layout_width">@dimen/_100sdp</item>
        <item name="backgroundTint">@color/button_neutral_inner</item>
    </style>
</resources>